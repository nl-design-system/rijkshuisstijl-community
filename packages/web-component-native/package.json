{
  "name": "@rijkshuisstijl-community/web-components",
  "version": "1.0.0-alpha.0",
  "author": "Community for NL Design System",
  "description": "Vanilla web components bundle based on the NL Design System architecture",
  "license": "EUPL-1.2",
  "type": "module",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git+ssh",
    "url": "git@github.com:nl-design-system/rijkshuisstijl-community.git",
    "directory": "."
  },
  "sideEffects": false,
  "scripts": {
    "build": "npm-run-all clean build:lib",
    "build:lib": "vite build",
    "clean": "rimraf dist/",
    "dev": "vite",
    "dev:build": "vite build --watch",
    "lint": "eslint src/**/*.ts",
    "test": "web-test-runner \"src/**/*.test.ts\" --node-resolve"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@web/test-runner": "0.19.0",
    "npm-run-all": "4.1.5",
    "rimraf": "6.0.1",
    "typescript": "5.7.2",
    "vite": "6.0.3",
    "vite-plugin-dts": "4.3.0"
  },
  "dependencies": {
    "tslib": "2.8.1"
  }
}
