{
  "name": "@rijkshuisstijl-community/storybook",
  "author": "Community for NL Design System",
  "description": "Storybook based on the NL Design System architecture",
  "license": "EUPL-1.2",
  "keywords": [
    "nl-design-system"
  ],
  "private": true,
  "publishConfig": {
    "access": "restricted",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git+ssh",
    "url": "git@github.com:nl-design-system/rijkshuisstijl-community.git",
    "directory": "packages/storybook"
  },
  "scripts": {
    "prebuild": "pnpm clean",
    "build": "storybook build --output-dir dist/ --config-dir config/",
    "build-storybook": "pnpm build",
    "chromatic": "chromatic",
    "clean": "rimraf dist/",
    "storybook": "storybook dev --config-dir config/ --port 6006",
    "prod-static": "http-server --port 6006 dist/",
    "test-storybook": "test-storybook --maxWorkers=2 --config-dir config/",
    "playwright:install": "playwright install --with-deps chromium --only-shell"
  },
