{%- if level is empty -%}
{%- set level = 1 -%}
{%- endif -%}
{%- if appearance is not empty -%}
{%- set attributes = attributes.addClass('nl-heading--level-' ~ appearance) -%}
{%- else -%}
{%- set attributes = attributes.addClass('nl-heading--level-' ~ level) -%}
{%- endif -%}
<h{{ level }}{{ attributes }}>{{ children }}</h{{ level }}>
